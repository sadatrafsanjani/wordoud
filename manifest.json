{
	"manifest_version": 3,
	"name": "Wordoud",
	"version": "1.0",
	"description": "Word cloud generator for the current page",
	"icons": {
		"128": "icon/128.png",
		"64": "icon/64.png",
		"32": "icon/32.png"
	},
	"action": {
		"default_icon": "icon/32.png",
		"default_popup": "index.html"
	},
	"permissions": [
		"storage",
		"scripting",
		"activeTab"
	],
	"options_page": "option.html"
}